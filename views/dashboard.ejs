<div class="animate-slide-up space-y-8">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">My Forms</h1>
            <p class="text-gray-500 dark:text-gray-400">Manage your feedback collectors</p>
        </div>
        <a href="/create"
            class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors shadow-lg shadow-blue-500/30 transform hover:-translate-y-1">
            + Create New
        </a>
    </div>

    <% if (forms.length===0) { %>
        <div
            class="text-center py-20 bg-white dark:bg-gray-800 rounded-2xl border border-gray-100 dark:border-gray-700">
            <div
                class="bg-gray-50 dark:bg-gray-900 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="ph-fill ph-files text-2xl text-gray-400"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-1">No forms yet</h3>
            <p class="text-gray-500 dark:text-gray-400">Create your first form to start collecting feedback.</p>
        </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% forms.forEach(form=> { %>
                    <div
                        class="bg-white dark:bg-gray-800 p-6 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 hover:shadow-xl transition-shadow group">
                        <div class="flex justify-between items-start mb-4">
                            <div
                                class="p-3 bg-blue-100 dark:bg-blue-900/30 rounded-xl group-hover:scale-110 transition-transform">
                                <i class="ph-fill ph-notepad text-xl text-blue-600 dark:text-blue-400"></i>
                            </div>
                            <div class="relative">
                                <button class="hover:text-red-700 transition-colors">
                                    <i class="text-red-500 not-italic">Delete</i>
                                </button>
                            </div>
                        </div>

                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 truncate">
                            <%= form.formName %>
                        </h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">
                            <%= form.questions.length %> Questions defined
                        </p>

                        <div class="flex gap-3">
                            <a href="/dashboard/analytics/<%= form._id %>"
                                class="flex-1 bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-200 py-2 rounded-lg text-sm font-semibold text-center hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
                                View Analytics
                            </a>
                            <a href="/feedback/<%= form._id %>" target="_blank"
                                class="px-3 py-2 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/40 transition-colors flex items-center"
                                title="Open Form Link">
                                <i class="ph-bold ph-arrow-square-out"></i>
                            </a>
                        </div>

                        <div
                            class="mt-3 text-xs text-gray-400 truncate bg-gray-50 dark:bg-gray-900 p-2 rounded select-all border border-gray-100 dark:border-gray-700">
                            http://localhost:3000/feedback/<%= form._id %>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } %>
</div>