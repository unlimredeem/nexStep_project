<div class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-lg mt-10">
    <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
    <form action="/auth/login" method="POST" class="space-y-4">
        <input type="text" name="email" placeholder="Email" required class="w-full p-3 border rounded">
        <input type="password" name="password" placeholder="Password" required class="w-full p-3 border rounded">
        <button class="w-full bg-green-600 text-white p-3 rounded font-bold">Login</button>
    </form>
    <p class="mt-4 text-center">No account? <a href="/signup" class="text-blue-600">Sign up</a></p>
</div>